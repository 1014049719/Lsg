<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f34e4a"
    android:orientation="vertical">

    <Button
        android:id="@+id/exchangeBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="@dimen/space_15_0"
        android:drawableLeft="@mipmap/lj_icon"
        android:text="兑换"
        android:textSize="@dimen/text_38"
        android:textColor="#ffffff"
        android:background="#00000000" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/pointscount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_15_0"
            android:text="1000"
            android:textColor="#ffffff"
            android:textSize="38sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_10"
            android:layout_alignBottom="@+id/pointscount_tv"
            android:layout_toRightOf="@+id/pointscount_tv"
            android:layout_marginBottom="@dimen/space_5_0"
            android:text="积分"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tips_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_15_0"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginBottom="@dimen/space_15_0"
        android:text="积分资产只有这么多，得继续努力哦！"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:background="#ffffff"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20_0"
            android:text="积分详情"
            android:textColor="#333333"
            android:textSize="@dimen/text_36"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>