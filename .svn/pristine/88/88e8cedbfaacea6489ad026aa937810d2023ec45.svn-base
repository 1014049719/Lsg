<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lsg="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/space_5_0"
        android:paddingBottom="@dimen/space_5_0"
        android:layout_marginLeft="@dimen/space_15_0"
        android:layout_marginRight="@dimen/space_15_0"
        android:gravity="center"
        android:orientation="horizontal">
        <com.talenton.lsg.base.widget.CircleImageView
            android:id="@+id/circle_photo"
            android:layout_width="@dimen/height_75"
            android:layout_height="@dimen/height_75"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            lsg:civ_border_color="@color/white"
            lsg:civ_border_width="2dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/space_5_0"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_circle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/text_28"
                android:text="test" />
            <TextView
                android:id="@+id/tv_circle_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/text_24"
                android:textColor="@color/text_sub"
                android:text="test" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_show_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textStyle="bold"
            android:textSize="@dimen/text_28"
            />
        <TextView
            android:id="@+id/tv_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/space_5_0"
            android:paddingBottom="@dimen/space_5_0"
            android:paddingLeft="@dimen/space_10_0"
            android:paddingRight="@dimen/space_10_0"
            android:layout_marginLeft="@dimen/space_10_0"
            android:background="@drawable/btn_login_wechat_selector"
            android:singleLine="true"
            android:textStyle="bold"
            android:textSize="@dimen/text_28"
            android:text="@string/circle_attention_apply"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_refuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_10_0"
            android:paddingTop="@dimen/space_5_0"
            android:paddingBottom="@dimen/space_5_0"
            android:paddingLeft="@dimen/space_10_0"
            android:paddingRight="@dimen/space_10_0"
            android:background="@drawable/btn_login_qq_selector"
            android:singleLine="true"
            android:textStyle="bold"
            android:textSize="@dimen/text_28"
            android:text="@string/circle_attention_refuse"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/list_div_color"/>
</LinearLayout>
