<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.talenton.lsg.ui.feed.FeedsListFragment">
    <LinearLayout
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/layout_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nav_search"
                android:scaleType="centerCrop"
                android:padding="@dimen/space_10_0"
                android:background="@drawable/btn_transparent_selector" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_circle"
            android:layout_width="@dimen/width_110"
            android:layout_height="@dimen/height_30"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_32"
            android:text="@string/main_menu_feed"
            android:background="@drawable/btn_circle_conner_half_press"/>
        <TextView
            android:id="@+id/tv_feeds"
            android:layout_width="@dimen/width_110"
            android:layout_height="@dimen/height_30"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_32"
            android:text="热门话题"
            android:background="@drawable/btn_topic_conner_half"/>
        <LinearLayout
            android:id="@+id/layout_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right">
            <com.talenton.lsg.widget.MsgTipsView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_8_0" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            android:id="@+id/circle_fragment_feed"
            android:name="com.talenton.lsg.ui.feed.CircleFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_circle" />
        <fragment
            android:id="@+id/circle_fragment_topic"
            android:name="com.talenton.lsg.ui.feed.FeedFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_feed" />
    </FrameLayout>
</LinearLayout>
