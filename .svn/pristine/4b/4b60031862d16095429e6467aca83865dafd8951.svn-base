<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.talenton.lsg.ui.feed.FeedsListFragment">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:titleTextAppearance="@style/Toolbar_TextAppearance_White"
        app:theme="@style/AppTheme"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:padding="0dp">
        <LinearLayout
            android:id="@+id/layout_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/btn_transparent_selector">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nav_search"
                android:scaleType="centerCrop"
                android:layout_marginLeft="@dimen/space_10_0"
                android:layout_marginRight="@dimen/space_10_0"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_circle"
            android:layout_width="@dimen/width_90"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="@dimen/space_3_0"
            android:paddingBottom="@dimen/space_3_0"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_34"
            android:text="@string/main_menu_feed"
            android:background="@drawable/btn_circle_conner_half_press"/>
        <TextView
            android:id="@+id/tv_feeds"
            android:layout_width="@dimen/width_90"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="@dimen/space_3_0"
            android:paddingBottom="@dimen/space_3_0"
            android:textColor="@color/white"
            android:textSize="@dimen/text_34"
            android:text="热门话题"
            android:background="@drawable/btn_topic_conner_half"/>
    </android.support.v7.widget.Toolbar>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            android:id="@+id/circle_fragment_feed"
            android:name="com.talenton.lsg.ui.feed.CircleFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_circle" />
        <fragment
            android:id="@+id/circle_fragment_topic"
            android:name="com.talenton.lsg.ui.feed.FeedFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_feed" />
    </FrameLayout>
</LinearLayout>
