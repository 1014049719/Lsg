<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lsg="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:id="@+id/view_holder"
        android:layout_width="match_parent"
        android:background="@color/list_div_color"
        android:layout_height="@dimen/height_15" />
    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:layout_marginLeft="@dimen/space_15_0"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_circle_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_5_0"
            android:singleLine="true"
            android:text="我自己的宝宝圈"
            android:textSize="@dimen/text_32"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/layout_attention"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingRight="@dimen/space_15_0"
            android:paddingLeft="@dimen/space_15_0"
            android:gravity="center"
            android:background="@drawable/btn_transparent_selector">
            <ImageView
                android:id="@+id/iv_attention_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_5_0"
                android:src="@mipmap/feeds_add_friend"
                android:scaleType="centerCrop" />
            <TextView
                android:id="@+id/tv_circle_attention"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:text="关注记录"
                android:textSize="@dimen/text_28" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/view_div_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/list_div_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space_15_0"
        android:paddingRight="@dimen/space_15_0"
        android:paddingTop="@dimen/space_10_0"
        android:paddingBottom="@dimen/space_10_0"
        android:background="@drawable/btn_white_bg_selector"
        android:gravity="center"
        android:orientation="horizontal">
        <com.talenton.lsg.base.widget.CircleImageView
            android:id="@+id/user_image"
            android:layout_width="@dimen/height_75"
            android:layout_height="@dimen/height_75"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            lsg:civ_border_color="@color/white"
            lsg:civ_border_width="2dp" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_5_0"
            android:layout_weight="1"
            android:gravity="center|start"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/tv_circle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="XX宝宝圈"
                android:maxLength="10"
                android:textColor="@color/text_main"
                android:textSize="@dimen/text_28" />
            <TextView
                android:id="@+id/tv_circle_private"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_5_0"
                android:layout_toRightOf="@+id/tv_circle_name"
                android:paddingRight="@dimen/space_10_0"
                android:paddingLeft="@dimen/space_10_0"
                android:paddingTop="@dimen/space_2_0"
                android:paddingBottom="@dimen/space_2_0"
                android:textSize="@dimen/text_24"
                android:background="@drawable/btn_blue_conner_stroke"/>
            <TextView
                android:id="@+id/tv_circle_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:text="XX宝宝圈"
                android:textSize="@dimen/text_24" />
            <TextView
                android:id="@+id/tv_circle_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_circle_name"
                android:layout_marginTop="@dimen/space_15_0"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_sub"
                android:text="测试宝宝1"
                android:textSize="@dimen/text_28" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/list_div_color"/>
</LinearLayout>
